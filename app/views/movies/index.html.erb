<h1>List of all Movies</h1>
<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><img src="<%= movie.image %>" alt="<%= movie.title %>" height="200"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director.name if movie.director %></td>
        <td><%= link_to "Show details", movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
