<h1>Movie <%= @movie.id %> details</h1>
<a href="/movies">Go back</a>

<hr>

<div>
  <dt>Title</dt>
  <dd><%= @movie.title %></dd>
  
  <dt>Year</dt>
  <dd><%= @movie.year %></dd>
  
  <dt>Duration</dt>
  <dd><%= @movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @movie.description %></dd>
  
  <dt>Image</dt>
  <img src="<%= @movie.image %>" style="width:250px;" alt="<%= @movie.title %>">
  
  <dt>Director</dt>
  <dd> <%= @movie.director.name if @movie.director %>
</div>
