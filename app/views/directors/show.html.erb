<h1>Director <%= @director.id %> details</h1>
<a href="/directors">Go back</a>

<hr>

<div>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>
  
  <dt>Dob</dt>
  <dd><%= @director.dob&.strftime("%Y-%m-%d") || 'Date not available' %></dd>
  
  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>
  
  <dt>Image</dt>
  <img src="<%= @director.image %>" style="width:250px;" alt="<%= @director.name %>">
</div>

<h2>Filmography</h2>
<table border='1'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><img src="<%= movie.image %>" alt="<%= movie.title %>" height="200"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director.name %></td>
        <td><%= link_to "Show details", movie_path(movie.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
